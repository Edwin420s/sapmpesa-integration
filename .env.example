# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sap-mpesa

MONGODB_URI=mongodb://localhost:27017/sap-mpesa

